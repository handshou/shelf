---
import BaseHead from '@ac/BaseHead.astro'
import Browser from '@ac/Browser.astro'

import '@styles/globals.css'

export interface Props {
	content: {
		title: string
		description: string
		pubDate?: string | Date | null
		updatedDate?: string
		heroImage?: string
	}
}

const {
	content: { title, description },
} = Astro.props
---

<html lang="en">
  <head>
    <BaseHead title={decodeURI(title)} description={decodeURI(description)} />
    <style>
      .sticky {
        position: sticky;
        top: 0;
        overflow: hidden;
        background-color: #eee;
      }
      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }
    </style>
  </head>

  <body class="overflow-hidden max-w-full flex flex-col min-h-screen items-center lg:flex-row">
    <div class="hidden lg:block lg:w-1/5"></div>
    <main class="w-full bg-white lg:w-3/5 max-h-screen">
      <Browser>
        <article>
          <slot />
        </article>
      </Browser>
    </main>
    <div class="hidden lg:block lg:w-1/5"></div>
  </body>
</html>
