---
import Backtrack from '../components/Backtrack.astro'
import BaseHead from '../components/BaseHead.astro'
import Browser from '../components/Browser.astro'

export interface Props {
	content: {
		title: string
		description: string
		pubDate?: string
		updatedDate?: string
		heroImage?: string
	}
}

const {
	content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
      .sticky {
        position: sticky;
        top: 0;
        overflow: hidden;
        background-color: #eee;
      }
			.blog {
				/* display: flex;
				flex-direction: column;
				align-items: left; */
			}
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
				border-top: 1px solid #ddd;
				margin: 1rem 0;
			}
		</style>
	</head>

	<body>
		<Browser>
			<main class="blog">
				<article>
          <div class="sticky">
                    <Backtrack url="/blog" title="back to ðŸª´ garden" />
          </div>
					{heroImage && <img width={720} height={360} src={heroImage} alt="" />}
					<slot />
				</article>
			</main>
		</Browser>
	</body>
</html>
