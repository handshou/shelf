---
import BaseLayout from '@layouts/Safari.astro'

import { SITE_DESCRIPTION, SITE_TITLE } from '@/config'
---

<style>
  h1 {
    display: flex;
    align-items: center;
    flex-direction: column;
  }
  ul {
    list-style-type: none;
    padding: unset;
  }
  ul li {
    display: flex;
  }
  ul li time {
    flex: 0 0 130px;
    font-style: italic;
    color: #595959;
  }

  .content {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    min-height: 50vh;
  }
</style>
<BaseLayout
  content={{
    title: SITE_TITLE,
    description: SITE_DESCRIPTION,
  }}
>
  <div class="content">
    <h1>:o</h1>
    <p><b>uh oh, page not found</b></p>
    <ul>
      <li>
        <a href="/blog"> 🪴 garden</a>
      </li>
      <li>
        <a href="/travels"> 🚴 travels</a>
      </li>
      <li>
        <a href="/projects"> 👨‍💻 projects</a>
      </li>
    </ul>
  </div>
</BaseLayout>
