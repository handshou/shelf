---
import { getEntry } from 'astro:content';
import BaseLayout from '../../layouts/Projects.astro';
import { client } from '../../../tina/__generated__/client';
import { ProjectComponent } from '../../components/projects';
import { type ProjectsQuery } from '../../../tina/__generated__/types';

Astro.response.headers.set('Cache-Control', 'max-age=0')

const { slug } = Astro.params;

const response : {
    data: ProjectsQuery, 
    variables: { relativePath: string }, 
    query: string,
} = await client.queries.projects({relativePath: `${slug}.md`})

const proj = await getEntry('projects', slug);

if (proj === undefined) {
    return Astro.redirect('/404');
}

const { Content } = await proj.render();

---

<BaseLayout content={proj.data}>
    {/* @ts-expect-error */}
    <ProjectComponent client:tina {...response} />
    {/*<Content content={proj.data} />*/}
</BaseLayout>
