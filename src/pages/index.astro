---
import { SITE_DESCRIPTION, SITE_TITLE } from '@/config'
import BaseLayout from '@layouts/Safari.astro'
---
<BaseLayout content={{ title: SITE_TITLE, description: SITE_DESCRIPTION }}>
    <main class="font-sans prose content pt-4">
      <h1>🧑🏽‍🌾</h1>
      Welcome! See my
      <ul class="list">
        <li>
          🪴
          <a href="/blog">
            <b>garden</b>
          </a>
        </li>

        <li>
          🚴
          <a href="/travels">
            <b>travels</b>
          </a>
        </li>

        <li>
          👨‍💻
          <a href="/projects">
            <b>projects</b>
          </a>
        </li>
      </ul>
      <p>
        Made using 📚 <a href="https://github.com/handshou/shelf">shelf</a>
      </p>
    </main>
    <style>
      .content {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        height: 50vh;
      }
      :visited {
        text-decoration-color: #eee;
      }
    </style>
</BaseLayout>
