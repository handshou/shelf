---
import { CldImage } from 'astro-cloudinary'
import '../styles/globals.css'

const { assets } = Astro.props

const imgExists = (img) => img.data.last_updated

// Shuffle assets
const shuffledAssets = assets
	.filter(imgExists)
	.map((value) => ({ value, sort: Math.random() }))
	.sort((a, b) => a.sort - b.sort)
	.map(({ value }) => value)
---

<html>
  <body>
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
      {shuffledAssets.map((asset) => (
        <div class="relative overflow-hidden ease-out duration-300 hover:-translate-y-1">
          <a href={asset.data.folder}>
            <CldImage
              class="h-auto w-full object-cover rounded-lg"
              alt={asset.data.public_id}
              src={asset.data.public_id}
              width={asset.data.width*0.4}
              height={asset.data.width*0.5}
              crop="fill"
              gravity="center"
              aspectRatio={5/4}
              format="auto"
              sizes="(max-width: 640px) 40vw, 30vw"
            />
          </a>
        </div>
      ))}
    </div>
  </body>
</html>

