---
const { url = '#', title = 'Back' } = Astro.props
---

<div class="backtrack font-sans border-1 ease-in transition hover:border-orange-400">
    <a href={url}>
        <h4>{title}</h4>
    </a>
</div>

<style lang="scss" is:global>
  .backtrack {
    display: flex;
    flex-direction: column;
    border: 1px solid black;
    border-radius: 0.5rem;
    position: relative;
    overflow: hidden;
    flex-grow: 1;
    transition: box-shadow 0.15s ease-in-out;
    margin-top: 1rem;
    background: #D9D9D9;
    align-items: center;
    text-transform: uppercase;
    &:focus-within a:focus {
      text-decoration: none;
      box-shadow: none;
      outline: none;
    }
    h4 {
        margin: 0.3rem;
    }
  }

  .backtrack :visited {
      text-decoration-color: #D9D9D9;;
  }
</style>
